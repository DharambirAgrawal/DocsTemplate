{
  "compilerOptions": {
    "module": "CommonJS",                  // Use ES module system
    "moduleResolution": "node",          // Resolve modules like Node.js
    "target": "ESNext",                  // Target the latest JavaScript
    "esModuleInterop": true,             // Interop with CommonJS modules
    "allowSyntheticDefaultImports": true, // Allow default imports for CommonJS
    "strict": true,                      // Enable strict type checking
    "skipLibCheck": true,                // Skip checking declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  // Output directory for compiled files
    "baseUrl": ".",                      // Base URL for module resolution
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts"],            // Include TypeScript files from src folder
  "exclude": ["node_modules"]            // Exclude node_modules folder
}
